# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
# Railway will automatically set this for you
DATABASE_URL=postgresql://user:password@localhost:5432/vzw_speelkamer

# JWT Secret (CHANGE THIS TO A RANDOM STRING!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Credentials (REQUIRED IN PRODUCTION!)
# Set these in Railway environment variables
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Cloudinary Image Storage (Get free account at cloudinary.com)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
